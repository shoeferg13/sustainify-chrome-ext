{
    "manifest_version": 2,
    "name": "sustainify",
    "version": "1.0.0",
    "description": "Shop more sustainably.",
    "icons": {
      "128": "icons/sustainify.png"
    },
    "chrome_url_overrides": {

    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "permissions": ["storage", "unlimitedStorage", "declarativeContent", "tabs", "activeTab", "https://us.shein.com/*"],
    "background": {
      "scripts": ["js/background.js", "js/event.js"],
      "persistent": false
    },
    "minimum_chrome_version": "60"
  }